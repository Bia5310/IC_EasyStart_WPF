<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

  <!-- Give product a unique ID per platform -->
  <?if $(var.Platform)=x64 ?>
  <?define ProductCode = "{DC79392A-3757-46A3-A409-259C7B6B4470}" ?>
  <?else?>
  <?define ProductCode = "{BEBA2815-67DA-46D4-BD3D-0A11E6CF7845}" ?>
  <?endif?>

  <!-- Fixed upgrade Id -->
  <!--<?define UpgradeCode = "{80C1AB37-0469-4673-967F-C4E0FE68D353}" ?>-->
  <?define UpgradeCode = "{ECA9C397-88B4-423B-9B0F-496ECB7BE35D}" ?>

  <!-- Define main product -->
  <Product Id="$(var.ProductCode)"
           Name="!(loc.ProductName_$(var.Platform))"
           Language="!(loc.Language)"
           Version="$(var.BuildVersion)"
           Manufacturer="No data"
           UpgradeCode="$(var.UpgradeCode)">

    <!-- Provide package details -->
    <Package InstallerVersion="200"
             Compressed="yes"
             InstallScope="perMachine"
             Platform="$(var.Platform)"
             Manufacturer="No data"
             Description="!(loc.Description)"
             Keywords="!(loc.Keywords)"
             Comments="!(loc.Comments)"
             Languages="!(loc.Language)"
             />

    <!-- Downgrade error message -->
    <MajorUpgrade AllowDowngrades="yes"/>
    <!-- DowngradeErrorMessage="!(loc.DowngradeErrorMessage)" AllowSameVersionUpgrades="yes" AllowDowngrades="yes"-->

    <!-- Include .cab file into .msi file -->
    <MediaTemplate
      EmbedCab="yes"/>

    <!-- Define main app icon -->
    <Icon Id="icon.ico" SourceFile="..\Medical_Studio\MedicalStudioLogo_2.ico" />

    <!-- Use the icon.ico icon for this installer (shows up in Add/Remove programs) -->
    <Property Id="ARPPRODUCTICON">icon.ico</Property>
    <!-- Help/Support website (shows in the Add/Remove programs) -->
    <!--<Property Id="ARPURLINFOABOUT">http://www.angelsix.com</Property>-->

    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <!-- Create a basic UI for the installer -->
    <UIRef Id="WixUI_InstallDir" />

    <!-- Change the installer UI background images -->
    <WixVariable Id="WixUILicenseRtf" Value="$(var.ProjectDir)\Assets\License.rtf" />
    <WixVariable Id="WixUIDialogBmp" Value="$(var.ProjectDir)\Assets\Background.bmp" />
    <WixVariable Id="WixUIBannerBmp" Value="$(var.ProjectDir)\Assets\Banner.bmp" />

    <!-- Define components, shortcuts, files etc... for installer -->
    <Feature Id="ProductFeature" Title="MedicalStudio" Level="1">

      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="PublishedComponents" />

    </Feature>

  </Product>

</Wix>