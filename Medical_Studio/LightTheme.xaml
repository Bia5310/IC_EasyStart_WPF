    <Style x:Key="BorderDownStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
    </Style>
    
    <Style x:Key="BorderStyle" TargetType="Border">
